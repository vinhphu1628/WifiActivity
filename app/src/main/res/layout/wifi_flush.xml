<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="After flush, all of your saved network configuration will be DELETE! (input SECURITY KEY in the text box to proceed)." />

    <EditText
        android:id="@+id/txtAgree"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textBox"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:inputType="textCapCharacters" />

    <Button
        android:id="@+id/buttonAgree"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtAgree"
        android:layout_marginLeft="-50dp"
        android:layout_toEndOf="@+id/txtAgree"
        android:text="Agree" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@+id/txtAgree"
        android:layout_below="@+id/txtAgree"
        android:layout_marginRight="-50dp"
        android:text="Back" />

</RelativeLayout>